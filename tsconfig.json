{
    "exclude": [
        "node_modules",
        "dist",
        "lib",
        "__tests__",
        "**/*.test*",
        "**/*.spec*"
    ],
    "compilerOptions": {
        "skipLibCheck": false,
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable"
        ],
        "rootDir": "./",
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "composite": true,
        "declarationMap": true,
        "outDir": "lib",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "pretty": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    }
}
